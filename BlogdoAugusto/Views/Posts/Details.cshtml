
@model BlogdoAugusto.Models.Post
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Detalhes</h2>

<div class="form-group">
    @Html.LabelFor(p => p.Title)
    <div>@Model.Title</div>

</div>
<div class="form-group">
    @Html.LabelFor(p => p.DateAdded) | @Html.LabelFor(p => p.DateAdded)
    <div>@Model.DateAdded.ToString("dd/MM/yyyy") | @Model.DateUpdated</div>
</div>
<div class="form-group">
    @Html.LabelFor(p => p.PostingBody)
    <div>@Model.PostingBody</div>

</div>
@Html.ActionLink("Voltar", "Index", "Posts", null, new { @class = "btn btn-primary" })
@Html.ActionLink("Editar", "Edit", "Posts", null, new { id = Model.Id }, new { @class = "btn btn-primary" })
@Html.ActionLink("Deletar", "Delete", "Posts", null, new { id = Model.Id }, new { @class = "btn btn-primary" })